name: Download YouTube Audio (Nightly + Cookies)

on:
  workflow_dispatch: # run manually from Actions tab

jobs:
  download-audio:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Install ffmpeg and nightly yt-dlp
        run: |
          sudo apt-get update
          sudo apt-get install -y ffmpeg
          python -m pip install --upgrade pip
          # Nightly build from master branch
          pip install --upgrade --force-reinstall "yt-dlp @ https://github.com/yt-dlp/yt-dlp/archive/master.tar.gz"

      - name: Create cookies.txt from secret
        env:
          YT_COOKIES_TXT: ${{ secrets.YT_COOKIES_TXT }}
        run: |
          if [ -z "$YT_COOKIES_TXT" ]; then
            echo "::error::YT_COOKIES_TXT secret is empty. Add your exported cookies to repo secrets."
            exit 1
          fi
          printf '%s' "$YT_COOKIES_TXT" > cookies.txt
          chmod 600 cookies.txt
          echo "âœ“ cookies.txt created"

      - name: Download audio from playlist
        env:
          YOUTUBE_PLAYLIST_URL: ${{ secrets.YOUTUBE_PLAYLIST_URL }}
        run: |
          if [ -z "$YOUTUBE_PLAYLIST_URL" ]; then
            echo "::error::YOUTUBE_PLAYLIST_URL secret is empty."
            exit 1
          fi
          mkdir -p downloads
          yt-dlp \
            --extract-audio \
            --audio-format mp3 \
            --audio-quality 0 \
            --embed-thumbnail \
            --add-metadata \
            --cookies cookies.txt \
            -o "downloads/%(title)s.%(ext)s" \
            "$YOUTUBE_PLAYLIST_URL"

      - name: Upload audio as artifact
        uses: actions/upload-artifact@v4
        with:
          name: youtube-audio
          path: downloads/
